<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.project.word.dao.TimerDao">
<update id="updateSelectTimer" parameterType="Integer">
		update test_timer set select_timer=#{timer} 
</update>
<select id="getSelectTimer" resultType="Integer">
	select select_timer from test_timer 
</select>


<update id="updateTextTimer" parameterType="Integer">
		update test_timer set text_timer=#{timer} 
</update>
<select id="getTextTimer" resultType="Integer">
	select text_timer from test_timer 
</select>
</mapper>


